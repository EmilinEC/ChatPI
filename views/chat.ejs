<div class="container alert alert-info mt-3">
    <h3 class="text-success" style="text-align: center;">Mensagens</h3>
<% result.forEach(result =>{ %>
    <h3 class="p-3 mb-2 bg-dark text-white">Nome: <%= result.name %></h3>
    <p class="p-3 mb-2 bg-success text-white"><%= result.msg %></p>
    <form action="/remove/" method="post">
    <input type="hidden" name="id" value="<%= result.id %>">
    <button type="submit" class="btn btn-danger col-2 mt-3 mb-3">Remover Mensagem</button>
    </form>      
<% }) %>
</div>